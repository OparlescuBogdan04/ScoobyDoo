<Window x:Class="ScoobyDoo.CPU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoobyDoo"
        mc:Ignorable="d"
        Title="CPU Testing" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="{StaticResource BackgroundGradient}">
        
        <!--Back Button-->
        <Button Style="{StaticResource BackButton}"/>
        
        <!--Information Button-->
        <Button x:Name="_CpuInfo" Content="Cpu Info" HorizontalAlignment="Left" Margin="345,370,0,0" VerticalAlignment="Top" Click="_CpuInfo_Click"/>

        <Slider Name="DiscreteSlider"
                Minimum="0"
                Maximum="9"
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200"
                ValueChanged="DiscreteSlider_ValueChanged" />
    </Grid>
</Window>

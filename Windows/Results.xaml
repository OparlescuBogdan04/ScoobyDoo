<Window x:Class="ScoobyDoo.Windows.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoobyDoo.Windows"
        mc:Ignorable="d"
        Title="Scooby Score" Height="450" Width="400" ResizeMode="NoResize">
    <Grid Background="{StaticResource BackgroundGradient}">
        <!--Home Button (MainWindow)-->
        <Button Content="Home" Style="{StaticResource BackButton}"/>
        
        <!--Scooby Software Logo-->
        <Image HorizontalAlignment="Center" Height="183" Margin="0,100,0,0" VerticalAlignment="Top" Width="275" Source="/Windows/_ScoobyDoo_Logo.png"/>
        
        
        <!--Scooby Score (in Scooby Snacks)-->
        <TextBlock x:Name="_ScoobyScore" HorizontalAlignment="Center" Margin="0,200,0,0" TextWrapping="Wrap" Text="Your Scooby Score is: " FontSize="20" VerticalAlignment="Center"/>

        <!--Save Button-->
        <Button x:Name="_Save" Content="Save" FontSize="16" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" Width="120" Click="_Save_Click"/>
    </Grid>
</Window>

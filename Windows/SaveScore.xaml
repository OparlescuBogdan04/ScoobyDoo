<Window x:Class="ScoobyDoo.Windows.SaveScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoobyDoo.Windows"
        mc:Ignorable="d"
        Title="Save Scooby Score" Height="450" Width="800">
    <Grid>
        <!--Username TextBlock-->
        <TextBlock HorizontalAlignment="Center" Margin="0,168,0,0" TextWrapping="Wrap" Text="Username: " VerticalAlignment="Top"/>

        <!--Username TextBox-->
        <TextBox x:Name="_Username" HorizontalAlignment="Center" Margin="0,196,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="_Save" Content="Save" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Click="_Save_Click"/>

    </Grid>
</Window>
